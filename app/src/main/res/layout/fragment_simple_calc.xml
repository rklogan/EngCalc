<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="4"
            android:rowCount="7"
            android:background="@color/Black"
            android:orientation="horizontal"
            tools:context=".MainActivity">

    <TextView android:id="@+id/equation_area"
              android:layout_columnSpan="4"
              android:layout_gravity="fill"
              android:text="0"
              android:textColor="@color/Light"
              android:textAlignment="center"
              android:layout_rowWeight="30"
              android:background="@color/Medium"
              android:textSize="36sp" android:gravity="center" />

    <TextView android:id="@+id/answer_area"
              android:layout_columnSpan="4"
              android:text="0"
              android:textColor="@color/Medium"
              android:textAlignment="gravity"
              android:layout_rowWeight="20"
              android:background="@color/Light"
              android:textSize="36sp"
              android:layout_gravity="fill"
              android:gravity="bottom|right" android:paddingRight="@dimen/answer_area_padding"/>

    <Button android:id="@+id/clear_button"
            android:layout_gravity="fill"
            android:text="C"
            android:textColor="@color/Lighest"
            android:textAlignment="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@drawable/ripple_effect"/>
    <Button android:id="@+id/parenthesis_button"
            android:layout_gravity="fill"
            android:text="()"
            android:textColor="@color/Lighest"
            android:textAlignment="center"
            android:layout_columnWeight="1"
            android:background="@drawable/ripple_effect" />
    <Button android:id="@+id/percent_button"
            android:layout_gravity="fill"
            android:text="%"
            android:textColor="@color/Lighest"
            android:textAlignment="center"
            android:layout_columnWeight="1"
            android:background="@drawable/ripple_effect" />
    <Button android:id="@+id/divide_button"
            android:layout_gravity="fill"
            android:text="/"
            android:textColor="@color/Lighest"
            android:textAlignment="center"
            android:layout_columnWeight="1"
            android:background="@drawable/ripple_effect" />

    <Button android:id="@+id/seven_button"
            android:layout_gravity="fill"
            android:text="7"
            android:textColor="@color/Lighest"
            android:textAlignment="center"
            android:layout_rowWeight="1"
            android:background="@drawable/ripple_effect" />
    <Button android:id="@+id/eight_button"
            android:layout_gravity="fill"
            android:text="8"
            android:textColor="@color/Lighest"
            android:textAlignment="center"
            android:background="@drawable/ripple_effect" />
    <Button android:id="@+id/nine_button"
            android:layout_gravity="fill"
            android:text="9"
            android:textColor="@color/Lighest"
            android:textAlignment="center"
            android:background="@drawable/ripple_effect"/>
    <Button android:id="@+id/multiply_button"
            android:layout_gravity="fill"
            android:text="X"
            android:textColor="@color/Lighest"
            android:textAlignment="center"
            android:background="@drawable/ripple_effect" />

    <Button android:id="@+id/four_button"
            android:layout_gravity="fill"
            android:text="4"
            android:textColor="@color/Lighest"
            android:textAlignment="center"
            android:layout_rowWeight="1"
            android:background="@drawable/ripple_effect" />
    <Button android:id="@+id/five_button"
            android:layout_gravity="fill"
            android:text="5"
            android:textColor="@color/Lighest"
            android:textAlignment="center"
            android:background="@drawable/ripple_effect" />
    <Button android:id="@+id/six_button"
            android:layout_gravity="fill"
            android:text="6"
            android:textColor="@color/Lighest"
            android:textAlignment="center"
            android:background="@drawable/ripple_effect" />
    <Button android:id="@+id/subtract_button"
            android:layout_gravity="fill"
            android:text="-"
            android:textColor="@color/Lighest"
            android:textAlignment="center"
            android:background="@drawable/ripple_effect"/>

    <Button android:id="@+id/one_button"
            android:layout_gravity="fill"
            android:text="1"
            android:textColor="@color/Lighest"
            android:textAlignment="center"
            android:layout_rowWeight="1"
            android:background="@drawable/ripple_effect"/>
    <Button android:id="@+id/two_button"
            android:layout_gravity="fill"
            android:text="2"
            android:textColor="@color/Lighest"
            android:textAlignment="center"
            android:background="@drawable/ripple_effect"/>
    <Button android:id="@+id/three_button"
            android:layout_gravity="fill"
            android:text="3"
            android:textColor="@color/Lighest"
            android:textAlignment="center"
            android:background="@drawable/ripple_effect"/>
    <Button android:id="@+id/add_button"
            android:layout_gravity="fill"
            android:text="+"
            android:textColor="@color/Lighest"
            android:textAlignment="center"
            android:background="@drawable/ripple_effect"/>

    <Button android:id="@+id/sign_button"
            android:layout_gravity="fill"
            android:text="+/-"
            android:textColor="@color/Lighest"
            android:textAlignment="center"
            android:layout_rowWeight="1"
            android:background="@drawable/ripple_effect"/>
    <Button android:id="@+id/zero_button"
            android:layout_gravity="fill"
            android:text="0"
            android:textColor="@color/Lighest"
            android:textAlignment="center"
            android:background="@drawable/ripple_effect"/>
    <Button android:id="@+id/decimal_button"
            android:layout_gravity="fill"
            android:text="."
            android:textColor="@color/Lighest"
            android:textAlignment="center"
            android:background="@drawable/ripple_effect"/>
    <Button android:id="@+id/equals_button"
            android:layout_gravity="fill"
            android:text="="
            android:textColor="@color/Lighest"
            android:textAlignment="center"
            android:background="@drawable/ripple_effect"/>

</GridLayout>